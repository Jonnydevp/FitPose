# FitPose API Configuration for Railway

# Main settings
ENV=production
DEBUG=False
API_VERSION=1.0.0

# Server (Railway automatically sets PORT)
HOST=0.0.0.0
PORT=8000

# CORS settings for production
ALLOWED_ORIGINS=["https://your-frontend-domain.com", "http://localhost:5173"]

# File limitations
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_VIDEO_TYPES=["video/mp4", "video/avi", "video/mov", "video/mkv"]

# OpenAI API (REQUIRED TO SET IN RAILWAY)
OPENAI_API_KEY=your_openai_api_key_here

# Video processing settings
FRAME_SKIP_RATIO=3
MIN_DETECTION_CONFIDENCE=0.5
MIN_TRACKING_CONFIDENCE=0.5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Temporary files (Railway compatible)
TEMP_DIR=/tmp/fitpose
CLEANUP_TEMP_FILES=True

# Metrics
ENABLE_METRICS=True
METRICS_PORT=9090
